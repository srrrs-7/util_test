root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{svelte, astro, ts, js, html, css, json}]
max_line_length = 80
indent_size = 2


[*.{go, rs, yaml, md}]
max_line_length = 80
indent_size = 2

[Makefile]
indent_style = tab
trim_trailing_whitespace = true
indent_size = 4
